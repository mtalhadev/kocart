    <script>
        $(document).ready(function() {
            $.getJSON("/getOrders1", function(result) {
                $.each(result, function (i, field) {
                    $.each(field.products, function(j, prod) {
                    $("#orderlist").append(
                        `<tr>
                            <td>`+(i+1)+`</td>
                            <td>
                                `+prod.title+` <span class='badge badge-danger'>`+field.status+`</span>
                            </td>
                            <td>`+prod.quantity+`</td>
                            <td>$`+prod.sale_price+`</td>
                            <td class="text-right">$`+prod.sale_price*prod.quantity+`</td>
                        </tr>`
                    );
                });
                $("#total_price").html("$"+field.total_price);
                $("#order_status").html("<span class='badge badge-danger'>"+field.status+"</span>");
                $("#address").html(field.address);
            });
            });
        });
    </script>
