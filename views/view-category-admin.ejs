    <script>
        $(document).ready(function() {
            $.getJSON("/categories", function(result) {
                $.each(result, function (i, field) {
                    $("#productslist").append(
                        `<div class="col-md-6 col-xl-3">
                        <div class="card-box product-box">

                            
                                <div class="product-action">

                                    <form method="POST" action="/adminEditCategoryHelper">
                                        <input type="text" id="update_serial" name="_id" class="form-control"
                                        value = "`+field._id+`" placeholder="e.g : Apple iMac"  hidden/>

                                        <button type="submit"  class="btn btn-success btn-xs waves-effect waves-light"><i class="mdi mdi-pencil"></i></button>
                                    </form>

                                    <form method="POST" action="/adminDeleteCategory">
                                        <input type="text" id="update_serial" name="category" class="form-control"
                                        value = "`+field.category+`" placeholder="e.g : Apple iMac"  hidden/>

                                        <button type="submit" class="btn btn-danger btn-xs waves-effect waves-light"><i class="mdi mdi-close"></i></button>
                                    </form>
                                </div>

                            <div class="product-info">
                                <div class="row align-items-center">
                                    
                                    <div class="col-auto">
                                        <div class="product-price-tag">
                                            `+field.category+`
                                        </div>
                                    </div>
                                </div> <!-- end row -->
                            </div> <!-- end product info-->
                        </div> <!-- end card-box-->
                    </div> <!-- end col-->`
                    );
                });
            });
        });
